{
  "manifest_version": 2,
  "name": "System Monitor",
  "version": "1.2.0",
  "description": "Monitor CPU and memory status",
  "homepage_url": "https://github.com/pd4d10/system-monitor",
  "background": {
    "scripts": ["dist/vendor.js", "dist/background.js"]
  },
  "permissions": [
    "system.cpu",
    "system.memory",
    "system.storage",
    "power"
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "icon.png"
  }
}
