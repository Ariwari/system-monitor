{
  "name": "system-monitor",
  "version": "1.2.1",
  "description": "Monitor CPU and memory status in Chrome and Opera.",
  "main": "index.js",
  "scripts": {
    "start": "webpack -w",
    "build": "webpack --config webpack.config.production.js -p; zip -r extension.zip ./chrome",
    "test": "eslint src && stylelint src/**/*.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pd4d10/system-monitor.git"
  },
  "author": "pd4d10 <pd4d10@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pd4d10/system-monitor/issues"
  },
  "homepage": "https://github.com/pd4d10/system-monitor#readme",
  "dependencies": {
    "babel-runtime": "^6.20.0",
    "lodash": "^4.17.2",
    "react": "^15.3.1",
    "react-dom": "^15.3.1"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.47",
    "@types/react": "^15.0.30",
    "awesome-typescript-loader": "^3.1.3",
    "clean-webpack-plugin": "^0.1.14",
    "css-loader": "^0.28.4",
    "postcss": "^5.0.21",
    "postcss-browser-reporter": "^0.5.0",
    "postcss-cssnext": "^2.5.2",
    "postcss-loader": "^0.11.1",
    "postcss-modules": "^0.8.0",
    "source-map-loader": "^0.2.1",
    "style-loader": "^0.13.1",
    "stylelint": "^7.6.0",
    "stylelint-config-standard": "^14.0.0",
    "typescript": "^2.3.4",
    "webpack": "^3.0.0",
    "webpack-bundle-analyzer": "^2.1.1"
  },
  "babel": {
    "presets": [
      "latest",
      "react"
    ],
    "plugins": [
      "transform-runtime"
    ]
  },
  "eslintConfig": {
    "extends": "airbnb",
    "env": {
      "browser": true,
      "webextensions": true
    },
    "rules": {
      "semi": [
        "error",
        "never"
      ],
      "react/jsx-filename-extension": "off"
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard"
  }
}
